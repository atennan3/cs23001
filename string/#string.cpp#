#include "string.hpp"

// Default Constructor - empty string
String::String () {
  stringSize = 1;
  str = new char('\0');
}

//String of capacity n
String::String(int n) {
  stringSize = n+1;
  str = new char[stringSize];
  str[0] = '\0';
}

// Constructor for a single character
String::String (char ch) {
  stringSize = 2;
  str = new char[2];
  str[0] = ch;
  str[1] = '\0';
}

//String of capacity n and initial value
String::String (int n, const char* ch) {
  stringSize = n+1;
  str = new char[stringSize];
  int i = 0;
  while(ch[i] != '\0') {
    str[i] = ch[i];
    ++i;
  }
  str[i] = '\0';
}

// Constructor for an array of characters                                       
String::String (const char ch[]) {
  int len = 0; //length of character array                                      
  int i = 0;
  while (ch[i] != '\0') {
    ++len;
    ++i;
  }
  str = new char[len+1];
  int j = 0;
  while(ch[j] != '\0') {
    str[j] = ch[j];
    ++j;
  }
  str[j] = '\0';
  stringSize = j+1;
}

// Copy Constructor
String::String (const String& rhs) {
  str = new char [rhs.length()];
  int i = 0;
  while (rhs[i] != '\0') {
    str[i] = rhs[i];
    ++i;
  }
  str[i] = '\0';
  stringSize = i+1;
}

// Destructor
String::~String() {
  delete[] str;
}

// length of string
int String::length() const {
  int len = 0;
  for (int i = 0; str[i] != '\0'; ++i) {
    ++len;
  }
  return len;
}

// capacity of string
int String::capacity() const {
  return stringSize - 1;
}

// Swap
void String::swap(String& rhs)
{
  char *temp = str;
  str = rhs.str;
  rhs.str = temp;

  int temp_cap = capacity();
  capacity() = rhs.capacity();
  rhs.capacity() = temp_cap;

  int temp_length = length();
  length() = rhs.length();
  rhs.length() = temp_length;
}

String& String::operator= (String s) {
  swap(s);
  return *this;
}

// Reset capacity of string
void String::resetCapacity(int n) {
  char *temp = new char[n];
  for (int i = 0; i < length(); ++i)
      temp[i] = str[i];
  delete[] str;
  str = temp;
  stringSize = n;
}

// + operator overload (concatenation)                                        
String String::operator+(const String& rhs)const
{                           
  String result(str);
  if((rhs.length()+length()+1)>capacity())
    result.resetCapacity(rhs.length()+length()+1);
  int offset = length();                       
  int i = 0;
  
  while(rhs.str[i] != '\0'){
    result.str[offset + i] = rhs.str[i];
    ++i;
  }  
  
  result.str[offset + i] = '\0';
  result.stringSize = offset+i+1;
  return result;
}

// Overload += operator
String& String::operator+=(String rhs){
  if((rhs.length()+length()+1)>capacity())
    resetCapacity(rhs.length()+length()+1);
 int start = length();
  int i = 0;
  while(rhs.str[i] != '\0'){
    str[start+i] = rhs.str[i];
    ++i;
  }
  str[start+i] = '\0';
  return *this;
}

//Accessor/Modifier
char& String::operator[] (int index) {
  return str[index];
}

//Accessor
char String::operator[] (int index) const {
  return str[index];
}

// Overload == operator
bool String::operator==(const String& rhs) const {
  int i = 0;
  while ((str[i] != '\0') && (str[i] == rhs.str[i])) {
    ++i;
  }
  return str[i] == rhs.str[i];
}

// overload < operator
bool String::operator<(const String& rhs) const {
  int i = 0;
  while ((str[i] != '\0') && (rhs[i] != '\0') && (str[i] == rhs[i])) {
    ++i;
  }
  return str[i] < rhs[i];
}

// Substring
String String::substr(int strt, int end) const {
  String result;
  int i;
  for (i = strt; i <= end; ++i) {
    result.str[i - strt] = str[i];
  }
  result.str[i - strt] = '\0';
  return result;
}

// Find character
int String::findch(char ch, int pos) const {
  if (pos < 0) {
    pos = 0;
  }
  if (pos > length() - 1) {
    return -1;
  }
  int i = pos;
  while(str[i] != '\0') {
    if (ch == str[i]) {
      return i;
    }
  }
  return -1;
}

// Find String
int String::findstr(String const& s, int pos) const {
  if (pos < 0) {
    pos = 0;
  }
  if (pos > length() - s.length()) {
    return -1;
  }
  int len = s.length();
  int i = pos;
  while (str[i] != '\0') {
    if (substr(i, i + len - 1) == s) {
      return i;
    }
    ++i;
  }
  return -1;
}

//overload << operator
std::ostream& operator<<(std::ostream& out, const String& rhs) {
  out << rhs.str;
  return out;
}

// Overload >> operator
std::istream& operator>>(std::istream& in, String& rhs) {
  in >> rhs.str;
  return in;
}

//////////////////////////////////////////////////////////////////////////
// Free Functions
bool operator== (const char lhs[],  const String& rhs) {
  return String(lhs) == rhs;
}

// overload > operator
bool operator> (const String& lhs, const String& rhs) {
  return (rhs < lhs);
}

// overload <= operator
bool operator<= (const String& lhs, const String& rhs) {
  return !(rhs < lhs);
}

// overload != operator
bool operator != (const String& lhs, const String& rhs) {
  return !(lhs == rhs);
}

// overload >= operator
bool operator>= (const String& lhs, const String& rhs) {
  return (rhs < lhs);
}

bool operator< (const char lhs, const String& rhs) {
  return String(lhs) < rhs;
}
bool operator< (const char lhs[], const String& rhs) {
  return String(lhs) < rhs;
}

String operator+ (char lhs, const String& rhs) {
  return String(lhs) + rhs;
}

String operator+ (const char lhs[], const String& rhs) {
  return String(lhs) + rhs;
}
